<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Client</title>
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            height: 100vh;
            width: 220px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40;
            padding-top: 15px;
            overflow-y: auto;
            z-index: 1040;
        }

        .sidebar a {
            padding: 10px 20px;
            text-decoration: none;
            font-size: 16px;
            color: #ddd;
            display: block;
        }

        .sidebar a:hover {
            background-color: #495057;
            color: #fff;
        }

        .sidebar .logo {
            color: #fff;
            font-size: 20px;
            text-align: center;
            margin-bottom: 30px;
        }

        .sidebar .dropdown a {
            display: block;
            padding: 10px;
            cursor: pointer;
            color: #fff;
            text-decoration: none;
        }

        .sidebar .dropdown-list {
            list-style: none;
            padding-left: 0;
        }

        .sidebar .dropdown-list li a {
            display: block;
            padding: 8px 20px;
            color: #ccc;
            text-decoration: none;
        }

        .sidebar .dropdown-list li a:hover {
            background-color: #333;
            color: #fff;
        }

        .rotate {
            transform: rotate(180deg);
        }

        /* .navbar {
    top: 0;
    left: 220px;
    right: 0;
    position: fixed;
    z-index: 1000;
    width: calc(100% - 220px);
    height: 56px;
  } */

        .navbar {
            top: 0;
            left: 220px;
            right: 0;
            position: fixed;
            z-index: 1000;
            width: calc(100% - 220px);
            height: 56px;
            background-color: #f8f9fa;
        }

        .main-content {
            margin-left: 220px;
            padding: 20px;
            padding-top: 30px;
        }

        .client-details-card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .detail-label {
            font-weight: 600;
            color: #495057;
        }

        .section-title {
            border-bottom: 2px solid #dee2e6;
            padding-bottom: 8px;
            margin-bottom: 20px;
            color: #343A40;
        }

        .attachment-badge {
            background-color: #e9ecef;
            color: #495057;
            padding: 5px 10px;
            border-radius: 5px;
            display: inline-block;
            margin-right: 8px;
            margin-bottom: 8px;
        }
    </style>
</head>

<body>

    <div class="sidebar">
        <div class="logo">
            <i class="fas fa-chart-line me-2"></i> CRM Panel
        </div>

        <a href="/"><i class="fas fa-home me-2"></i>Dashboard</a>
        <a href="/leads"><i class="fas fa-user-plus me-2"></i>Leads</a>
        <a href="/customers"><i class="fas fa-users me-2"></i>Customers</a>
        <a href="/job"><i class="fas fa-briefcase me-1"></i> Jobs</a>
        <a href="/clients"><i class="fas fa-building me-1"></i> Clients</a>
        <a href="/contact"><i class="fas fa-address-book me-2"></i>Contacts</a>
        <a href="/candidates"><i class="fas fa-user-graduate me-2"></i>Candidates</a>
        <a href="/note"><i class="fas fa-sticky-note me-2"></i>Notes</a>
        <a href="/manager"><i class="fas fa-building me-2"></i>Office</a>
        <a href="/products"><i class="fas fa-box me-2"></i>Products</a>
        <a href="/sales"><i class="fas fa-dollar-sign me-2"></i>Sales</a>
        <a href="/tickets"><i class="fas fa-ticket-alt me-2"></i>Tickets</a>
        <a href="/quotations"><i class="fas fa-file-invoice me-2"></i>Quotations</a>

        <!-- Reports Dropdown -->
        <div class="dropdown">
            <a href="javascript:void(0)" onclick="toggleDropdown('reportDropdown', 'chevronReport')">
                <i class="fas fa-cogs me-2"></i> Reports
                <i id="chevronReport" class="fas fa-chevron-up float-end mt-2"></i>
            </a>
            <ul id="reportDropdown" class="dropdown-list" style="display: none; margin-left: 20px;">
                <li><a href="/reports/clients-by-industry">Clients By Industry</a></li>
                <li><a href="/reports/jobs-by-status">Jobs By Status</a></li>
                <li><a href="/reports/jobs-by-industry">Jobs By Industry</a></li>
                <li><a href="/reports/jobs-by-type">Jobs By Type</a></li>
                <li><a href="/reports/clients-by-source">Clients By Source</a></li>
            </ul>
        </div>

        <!-- Candidate Setup Dropdown -->
        <div class="dropdown">
            <a href="javascript:void(0)" onclick="toggleDropdown('candidateDropdown', 'chevronCandidate')">
                <i class="fas fa-cogs me-2"></i> Candidate Setup
                <i id="chevronCandidate" class="fas fa-chevron-up float-end mt-2"></i>
            </a>
            <ul id="candidateDropdown" class="dropdown-list" style="display: none; margin-left: 20px;">
                <li><a href="/candidate/source">Candidate Source</a></li>
                <li><a href="/candidate/status">Candidate Status</a></li>
                <li><a href="/client/cientSource">Client Source</a></li>
                <li><a href="/note/notetype">Note Type</a></li>
                <li><a href="/industries">Industries</a></li>
                <li><a href="/job-open-status">Open Job Status</a></li>
                <li><a href="/job-type">Job Type</a></li>
            </ul>
        </div>


        <a href="/auth/logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</a>

    </div>

    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm" style="position: fixed;">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">
                <h2>Product CRM</h2>
            </span>

            <div class="d-flex">
                <span class="navbar-text me-3">
                    <i class="fas fa-user-circle me-1"></i>
                    <%= (typeof user !=='undefined' && user && user.name) ? user.name : 'User' %>
                </span>
                <a href="/auth/logout" class="btn btn-outline-danger btn-sm">
                    <i class="fas fa-sign-out-alt me-1 mt-2"></i>Logout
                </a>
            </div>
        </div>
    </nav>

    <div class="main-content mt-5">
        <div class="container-fluid">
            <div class="row mb-3">
                <div class="col-md-12">
                    <a href="/clients" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to Clients
                    </a>
                </div>
            </div>

            <div class="card client-details-card mb-4">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Client Details</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="section-title">Basic Information</h5>
                            <div class="row mb-2">
                                <div class="col-md-4 detail-label">Client Name:</div>
                                <div class="col-md-8">
                                    <%= client.clientName %>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-4 detail-label">Telegram:</div>
                                <div class="col-md-8">
                                    <%= client.telegram %>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-4 detail-label">Industry:</div>
                                <div class="col-md-8">
                                    <%= client.industry.name %>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-4 detail-label">Contact Number:</div>
                                <div class="col-md-8">
                                    <%= client.contactNumber %>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-4 detail-label">Fax:</div>
                                <div class="col-md-8">
                                    <%= client.fax || 'N/A' %>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h5 class="section-title">Additional Information</h5>
                            <div class="row mb-2">
                                <div class="col-md-4 detail-label">Source:</div>
                                <div class="col-md-8">
                                    <%= client.clientSource.name %>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-4 detail-label">Server:</div>
                                <div class="col-md-8">
                                    <%= client.server %>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-4 detail-label">Website:</div>
                                <div class="col-md-8">
                                    <% if(client.website) { %>
                                        <a href="<%= client.website %>" target="_blank">
                                            <%= client.website %>
                                        </a>
                                        <% } else { %>
                                            N/A
                                            <% } %>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-4 detail-label">Status:</div>
                                <div class="col-md-8">
                                    <span class="badge bg-<%= client.status === 'Active' ? 'success' : 'danger' %>">
                                        <%= client.status %>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-12">
                            <h5 class="section-title">About</h5>
                            <p>
                                <%= client.about || 'No description provided.' %>
                            </p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="section-title">Billing Address</h5>
                            <div class="row mb-2">
                                <div class="col-md-4 detail-label">Street:</div>
                                <div class="col-md-8">
                                    <%= client.billingStreet %>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-4 detail-label">City:</div>
                                <div class="col-md-8">
                                    <%= client.billingCity %>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-4 detail-label">State:</div>
                                <div class="col-md-8">
                                    <%= client.billingState %>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-4 detail-label">Country:</div>
                                <div class="col-md-8">
                                    <%= client.billingCountry %>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-4 detail-label">Postal Code:</div>
                                <div class="col-md-8">
                                    <%= client.billingCode %>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h5 class="section-title">Shipping Address</h5>
                            <% if(client.shippingStreet) { %>
                                <div class="row mb-2">
                                    <div class="col-md-4 detail-label">Street:</div>
                                    <div class="col-md-8">
                                        <%= client.shippingStreet %>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-md-4 detail-label">City:</div>
                                    <div class="col-md-8">
                                        <%= client.shippingCity %>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-md-4 detail-label">State:</div>
                                    <div class="col-md-8">
                                        <%= client.shippingState %>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-md-4 detail-label">Postal Code:</div>
                                    <div class="col-md-8">
                                        <%= client.shippingCode %>
                                    </div>
                                </div>
                                <% } else { %>
                                    <p>No shipping address provided.</p>
                                    <% } %>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-12 text-end">
                            <!-- <a href="/clients/<%= client._id %>/edit" class="btn btn-primary me-2">
                            <i class="fas fa-edit me-1"></i> Edit Client
                        </a> -->
                            <form action="/clients/<%= client._id %>?_method=DELETE" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this client?')">
                                    <i class="fas fa-trash-alt me-1"></i> Delete Client
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleDropdown(dropdownId, iconId) {
            const dropdown = document.getElementById(dropdownId);
            const icon = document.getElementById(iconId);

            if (dropdown.style.display === "none" || dropdown.style.display === "") {
                dropdown.style.display = "block";
                icon.classList.add("rotate");
            } else {
                dropdown.style.display = "none";
                icon.classList.remove("rotate");
            }
        }
    </script>

</body>

</html>