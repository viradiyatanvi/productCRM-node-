<%- include('../layout') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="main-content">
        <div class="container mt-4">


  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Note Type List</h2>
    <a href="/note/notetype/add" class="btn text-white" style="background-color: #343a40;">Add New Note Type</a>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Last Updated</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% noteTypes.forEach(noteType => { %>
        <tr>
          <td><%= noteType.name %></td>
          <td>
            <span class="badge <%= noteType.status === 'Active' ? 'bg-success' : 'bg-secondary' %>">
              <%= noteType.status %>
            </span>
          </td>
          <td><%= noteType.updatedAt.toLocaleString() %></td>
          <td>
            <a href="/note/notetype/edit/<%= noteType._id %>" class="btn btn-sm btn-warning">Edit</a>
            <a href="/note/notetype/delete/<%= noteType._id %>" class="btn btn-sm btn-danger" 
               onclick="return confirm('Are you sure you want to delete this note type?')">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
    </div>
</body>
</html>