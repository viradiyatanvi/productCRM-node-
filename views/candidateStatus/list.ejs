<%- include('../layout') %>

    <!DOCTYPE html>
    <html>

    <head>
        <title>Candidate Status List</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    </head>

    <body>
        <div class="main-content">
            <div class="container mt-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="mb-0">Candidate Status List</h2>
                    <a href="/candidate/status/add" class="btn text-white" style="background-color: #343a40;">
                        <i class="fas fa-plus me-1"></i> Add Candidate Status
                    </a>
                </div>

                <div class="table-responsive shadow-sm">
                    <table class="table table-bordered table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Updated At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% candidates.forEach(c=> { %>
                                <tr>
                                    <td>
                                        <%= c.name %>
                                    </td>
                                    <td>
                                        <% if (c.status==='Active' ) { %>
                                            <span class="badge bg-success">Active</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Inactive</span>
                                                <% } %>
                                    </td>
                                    <td>
                                        <%= new Date(c.updatedAt).toLocaleString() %>
                                    </td>
                                    <td>
                                        <a href="/candidate/status/edit/<%= c._id %>"
                                            class="btn btn-sm btn-warning me-2">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a href="/candidate/status/delete/<%= c._id %>" class="btn btn-sm btn-danger"
                                            onclick="return confirm('Are you sure you want to delete this status?')">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>

    </html>