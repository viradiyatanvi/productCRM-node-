<%- include('../layout') %>

<div class="main-content p-5">
  <h3>Add New Candidate</h3>

  <form method="POST" action="/candidate/add">
    <div class="col-md-6 mb-2">
      <label>Assign From Contact</label>
      <select name="contactId" class="form-control">
        <option value="">-- Select Contact --</option>
        <% contacts.forEach(c => { %>
          <option value="<%= c._id %>"><%= c.fullName %> (<%= c.phone %>)</option>
        <% }) %>
      </select>
    </div>

    <div class="row mt-2">
      <div class="col-md-6 mb-2">
        <label>Full Name</label>
        <input type="text" name="fullName" class="form-control" required />
      </div>
      <div class="col-md-6 mb-2">
        <label>Email</label>
        <input type="email" name="email" class="form-control" />
      </div>
      <div class="col-md-6 mb-2">
        <label>Phone</label>
        <input type="text" name="phone" class="form-control" required />
      </div>
      <div class="col-md-6 mb-2">
        <label>Alternate Phone</label>
        <input type="text" name="alternatePhone" class="form-control" />
      </div>
      <div class="col-md-6 mb-2">
        <label>City</label>
        <input type="text" name="city" class="form-control" />
      </div>
      <div class="col-md-6 mb-2">
        <label>State</label>
        <input type="text" name="state" class="form-control" />
      </div>
      <div class="col-md-6 mb-2">
        <label>Company</label>
        <input type="text" name="company" class="form-control" />
      </div>
      <div class="col-md-6 mb-2">
        <label>Status</label>
        <select name="status" class="form-control">
          <option value="new">New</option>
          <option value="interested">Interested</option>
          <option value="not_interested">Not Interested</option>
          <option value="follow_up">Follow Up</option>
          <option value="converted">Converted</option>
        </select>
      </div>
      <div class="col-md-12 mb-2">
        <label>Notes</label>
        <textarea name="notes" class="form-control"></textarea>
      </div>
    </div>

    <div class="mt-3">
      <button class="btn btn-success">üíæ Save Candidate</button>
      <a href="/candidate" class="btn btn-secondary">‚Ü©Ô∏è Back</a>
    </div>
  </form>
</div>