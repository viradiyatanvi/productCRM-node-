<div class="modal fade" id="addToModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Contact To</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <button id="addToCandidate" class="btn btn-success w-100 mb-2">Add To Candidate</button>
        <button id="addToManager" class="btn btn-info w-100">Add To Manager</button>
      </div>
    </div>
  </div>
</div>

<script>
  let selectedContactId = null;

  function openAddToPopup(contactId) {
    selectedContactId = contactId;
    const modal = new bootstrap.Modal(document.getElementById('addToModal'));
    modal.show();
  }

  document.addEventListener('DOMContentLoaded', function () {
    document.getElementById('addToCandidate').addEventListener('click', function () {
      window.location.href = `/candidate/create/${selectedContactId}`;
    });

    document.getElementById('addToManager').addEventListener('click', function () {
      window.location.href = `/manager/create/${selectedContactId}`;
    });
  });
</script>
