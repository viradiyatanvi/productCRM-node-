<%- include('../layout') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Job Type</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="main-content">
        <div class="container mt-4">
            <div class="card">
                <div class="card-header text-white" style="background-color: #343a40;">
                    <h4>Job Type Details</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Name:</strong> <%= jobType.name %></p>
                            <p><strong>Status:</strong> 
                                <span class="badge bg-<%= jobType.status === 'active' ? 'success' : 'danger' %>">
                                    <%= jobType.status %>
                                </span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Created At:</strong> <%= jobType.createdAt.toLocaleString() %></p>
                            <p><strong>Updated At:</strong> <%= jobType.updatedAt.toLocaleString() %></p>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="/job-type" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>