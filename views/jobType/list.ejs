<%- include('../layout') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Job Types</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"> -->
</head>
<body>
    <div class="main-content">
        <div class="container-fluid">
            <div class="card mt-4 shadow">
                <div class="card-header d-flex justify-content-between align-items-center text-white" style="background-color: #343a40;">
                    <h4 class="mb-0">Job Types</h4>
                    <a href="/job-type/add" class="btn btn-light btn-sm">
                        <i class="fas fa-plus me-1"></i> Add New
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover align-middle text-center">
                            <thead class="table-dark">
                                <tr>
                                    <th>SL</th>
                                    <th>Name</th>
                                    <th>Status</th>
                                    <th>Updated At</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (jobTypes.length > 0) { %>
                                    <% jobTypes.forEach((jobType, index) => { %>
                                        <tr>
                                            <td><%= index + 1 %></td>
                                            <td><%= jobType.name %></td>
                                            <td>
                                                <span class="badge bg-<%= jobType.status === 'active' ? 'success' : 'danger' %>">
                                                    <%= jobType.status %>
                                                </span>
                                            </td>
                                            <td><%= jobType.updatedAt.toLocaleDateString() %></td>
                                            <td>
                                                <a href="/job-type/view/<%= jobType._id %>"
                                                    class="btn btn-sm btn-outline-primary me-1" title="View">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <form action="/job-type/delete/<%= jobType._id %>" method="POST"
                                                    class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-danger"
                                                        onclick="return confirm('Are you sure you want to delete this job type?')">
                                                        <i class="fas fa-trash-alt"></i> Delete
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="text-muted">No job types found.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>