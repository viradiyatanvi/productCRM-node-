<% layout('../layout') -%>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">
        <i class="fas fa-user-plus text-primary me-2"></i>
        Add New User
    </h4>
    <a href="/users" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>
        Back to Users
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">User Information</h5>
            </div>
            <div class="card-body">
                <% if (error) { %>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <%= error %>
                </div>
                <% } %>

                <form method="POST" action="/users/add" onsubmit="return validateForm(this)">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="name" class="form-label">Full Name *</label>
                            <input type="text" class="form-control" id="name" name="name" 
                                   value="<%= formData.name || '' %>" required>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label">Email Address *</label>
                            <input type="email" class="form-control" id="email" name="email" 
                                   value="<%= formData.email || '' %>" required>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="password" class="form-label">Password *</label>
                            <input type="password" class="form-control" id="password" name="password" 
                                   minlength="6" required>
                            <small class="form-text text-muted">Minimum 6 characters</small>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="phone" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="phone" name="phone" 
                                   value="<%= formData.phone || '' %>">
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="role" class="form-label">Role *</label>
                            <select class="form-select" id="role" name="role" required>
                                <option value="">Select Role</option>
                                <option value="admin" <%= formData.role === 'admin' ? 'selected' : '' %>>Administrator</option>
                                <option value="sales" <%= formData.role === 'sales' ? 'selected' : '' %>>Sales Executive</option>
                                <option value="telecaller" <%= formData.role === 'telecaller' ? 'selected' : '' %>>Telecaller</option>
                                <option value="support" <%= formData.role === 'support' ? 'selected' : '' %>>Support Agent</option>
                            </select>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="isActive" class="form-label">Status</label>
                            <select class="form-select" id="isActive" name="isActive">
                                <option value="true" <%= formData.isActive !== 'false' ? 'selected' : '' %>>Active</option>
                                <option value="false" <%= formData.isActive === 'false' ? 'selected' : '' %>>Inactive</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-end gap-2">
                        <a href="/users" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>
                            Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>
                            Create User
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle text-info me-2"></i>
                    Role Permissions
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <h6 class="text-danger">
                        <i class="fas fa-user-shield me-1"></i>
                        Administrator
                    </h6>
                    <ul class="list-unstyled small text-muted">
                        <li>• Full system access</li>
                        <li>• User management</li>
                        <li>• Reports and analytics</li>
                        <li>• System configuration</li>
                    </ul>
                </div>
                
                <div class="mb-3">
                    <h6 class="text-success">
                        <i class="fas fa-user-tie me-1"></i>
                        Sales Executive
                    </h6>
                    <ul class="list-unstyled small text-muted">
                        <li>• Lead management</li>
                        <li>• Customer management</li>
                        <li>• Product management</li>
                        <li>• Sales recording</li>
                    </ul>
                </div>
                
                <div class="mb-3">
                    <h6 class="text-info">
                        <i class="fas fa-headset me-1"></i>
                        Telecaller
                    </h6>
                    <ul class="list-unstyled small text-muted">
                        <li>• Assigned lead access</li>
                        <li>• Follow-up management</li>
                        <li>• Call logging</li>
                        <li>• Lead status updates</li>
                    </ul>
                </div>
                
                <div class="mb-3">
                    <h6 class="text-warning">
                        <i class="fas fa-life-ring me-1"></i>
                        Support Agent
                    </h6>
                    <ul class="list-unstyled small text-muted">
                        <li>• Ticket management</li>
                        <li>• Customer support</li>
                        <li>• Issue resolution</li>
                        <li>• Customer communication</li>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-lightbulb text-warning me-2"></i>
                    Security Guidelines
                </h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled small">
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        Use strong passwords (min 6 characters)
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        Assign appropriate roles based on responsibilities
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        Regularly review user access
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        Deactivate unused accounts
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script>
function validateForm(form) {
    const requiredFields = form.querySelectorAll('[required]');
    let isValid = true;
    
    requiredFields.forEach(field => {
        if (!field.value.trim()) {
            field.classList.add('is-invalid');
            isValid = false;
        } else {
            field.classList.remove('is-invalid');
        }
    });
    
    // Email validation
    const email = form.querySelector('#email');
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (email.value && !emailRegex.test(email.value)) {
        email.classList.add('is-invalid');
        isValid = false;
    }
    
    // Password validation
    const password = form.querySelector('#password');
    if (password.value && password.value.length < 6) {
        password.classList.add('is-invalid');
        isValid = false;
    }
    
    if (!isValid) {
        alert('Please fill in all required fields correctly.');
    }
    
    return isValid;
}

// Real-time validation
document.addEventListener('DOMContentLoaded', function() {
    const inputs = document.querySelectorAll('input, select');
    inputs.forEach(input => {
        input.addEventListener('blur', function() {
            if (this.hasAttribute('required') && !this.value.trim()) {
                this.classList.add('is-invalid');
            } else {
                this.classList.remove('is-invalid');
            }
        });
    });
});
</script>