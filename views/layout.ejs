<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>
        Product CRM
    </title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
  body {
    font-family: 'Segoe UI', sans-serif;
    background-color: #f8f9fa;
  }

  .sidebar {
    height: 100vh;
    width: 220px;
    position: fixed;
    top: 0;
    left: 0;
    background-color: #343a40;
    padding-top: 15px;
    overflow-y: auto;
    z-index: 1040;
  }

  .sidebar a {
    padding: 10px 20px;
    text-decoration: none;
    font-size: 16px;
    color: #ddd;
    display: block;
  }

  .sidebar a:hover {
    background-color: #495057;
    color: #fff;
  }

  .sidebar .logo {
    color: #fff;
    font-size: 20px;
    text-align: center;
    margin-bottom: 30px;
  }

  /* .navbar {
    top: 0;
    left: 220px;
    right: 0;
    position: fixed;
    z-index: 1000;
    width: calc(100% - 220px);
    height: 56px;
  } */

  .navbar {
  top: 0;
  left: 220px;
  right: 0;
  position: fixed;
  z-index: 1000;
  width: calc(100% - 220px);
  height: 56px;
  background-color: #f8f9fa;
}

  .main-content {
    margin-left: 220px;
    padding: 20px;
    padding-top: 30px;
  }
</style>


</head>

<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <div class="logo">
            <i class="fas fa-chart-line me-2"></i> CRM Panel
        </div>
        <a href="/"><i class="fas fa-home me-2"></i>Dashboard</a>
        <a href="/leads"><i class="fas fa-user-plus me-2"></i>Leads</a>
        <a href="/customers"><i class="fas fa-users me-2"></i>Customers</a>
        <a href="/contact"><i class="fas fa-address-book me-2"></i>Contacts</a>
        <a href="/candidate"><i class="fas fa-user-graduate me-2"></i>Candidates</a>
        <a href="/manager"><i class="fas fa-building me-2"></i>Office</a>
        <a href="/products"><i class="fas fa-box me-2"></i>Products</a>
        <a href="/sales"><i class="fas fa-dollar-sign me-2"></i>Sales</a>
        <a href="/tickets"><i class="fas fa-ticket-alt me-2"></i>Tickets</a>
        <a href="/quotations"><i class="fas fa-file-invoice me-2"></i>Quotations</a>
        <a href="/auth/logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</a>
    </div>

    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm" style="position: fixed;">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">
              <h2>Product CRM</h2>
            </span>

            <div class="d-flex">
                <span class="navbar-text me-3">
                    <i class="fas fa-user-circle me-1"></i>
                      <%= (typeof user !== 'undefined' && user && user.name) ? user.name : 'User' %>  
                </span>
                <a href="/auth/logout" class="btn btn-outline-danger btn-sm">
                    <i class="fas fa-sign-out-alt me-1 mt-2"></i>Logout
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
       
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>