      padding: 10px;
      cursor: pointer;
      color: #fff;
      text-decoration: none;
    }

    .sidebar .dropdown-list {
      list-style: none;
      padding-left: 0;
    }

    .sidebar .dropdown-list li a {
      display: block;
      padding: 8px 20px;
      color: #ccc;
      text-decoration: none;
    }

    .sidebar .dropdown-list li a:hover {
      background-color: #333;
      color: #fff;
    }

    .rotate {
      transform: rotate(180deg);
    }

    /* .navbar {
    top: 0;
    left: 220px;
