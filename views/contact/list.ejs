<%- include('../layout') %>

  <!DOCTYPE html>
  <html>

  <head>
    <title>Contact List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  </head>

  <body>
    <div class="main-content">
      <div class="container">
        <h2>Contact List</h2>
        <a href="/contact/add" class="btn btn-success mb-3">Add New Contact</a>

        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Full Name</th>
              <th>Phone</th>
              <th>Email</th>
              <th>City</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% contacts.forEach(contact=> { %>
              <tr>
                <td>
                  <%= contact.fullName %>
                </td>
                <td>
                  <%= contact.phone %>
                </td>
                <td>
                  <%= contact.email %>
                </td>
                <td>
                  <%= contact.city %>
                </td>
                <td>
                  <button class="btn btn-primary btn-sm" onclick="openAddToPopup('<%= contact._id %>')">
                    Add To
                  </button>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>

      <%- include("partials/addToPopup") %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>

  </html>