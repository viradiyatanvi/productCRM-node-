<%- include('../layout') %>

  <div class="main-content">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Add New Candidate</h2>
      <a href="/candidates" class="btn btn-secondary">Back to List</a>
    </div>

    <form action="/candidates/add" method="POST" enctype="multipart/form-data">
      <!-- Basic Information Section -->
      <div class="form-section">
        <h4>Basic Information</h4>
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label">First Name*</label>
            <input type="text" class="form-control" name="firstName" value="<%= formData?.firstName || '' %>" required>
          </div>
          <div class="col-md-6">
            <label class="form-label">Last Name*</label>
            <input type="text" class="form-control" name="lastName" value="<%= formData?.lastName || '' %>" required>
          </div>
          <div class="col-md-6">
            <label class="form-label">Email*</label>
            <input type="email" class="form-control" name="email" value="<%= formData?.email || '' %>" required>
          </div>
          <div class="col-md-6">
            <label class="form-label">Phone*</label>
            <input type="text" class="form-control" name="phone" value="<%= formData?.phone || '' %>" required>
          </div>
          <div class="col-md-6">
            <label class="form-label">Password*</label>
            <input type="password" class="form-control" name="password" required>
          </div>
          <div class="col-md-6">
            <label class="form-label">Confirm Password*</label>
            <input type="password" class="form-control" name="confirmPassword" required>
          </div>
          <div class="col-md-6">
            <label class="form-label">Fax</label>
            <input type="text" class="form-control" name="fax" value="<%= formData?.fax || '' %>">
          </div>
          <div class="col-md-6">
            <label class="form-label">Website</label>
            <input type="text" class="form-control" name="website" value="<%= formData?.website || '' %>">
          </div>
        </div>
      </div>

      <!-- Address Information -->
      <div class="form-section">
        <h4>Address Information</h4>
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label">Street</label>
            <input type="text" class="form-control" name="street" value="<%= formData?.street || '' %>">
          </div>
          <div class="col-md-6">
            <label class="form-label">City</label>
            <input type="text" class="form-control" name="city" value="<%= formData?.city || '' %>">
          </div>
          <div class="col-md-4">
            <label class="form-label">State</label>
            <input type="text" class="form-control" name="state" value="<%= formData?.state || '' %>">
          </div>
          <div class="col-md-4">
            <label class="form-label">Postal Code</label>
            <input type="text" class="form-control" name="code" value="<%= formData?.code || '' %>">
          </div>
          <div class="col-md-4">
            <label class="form-label">Country</label>
            <input type="text" class="form-control" name="country" value="<%= formData?.country || '' %>">
          </div>
        </div>
      </div>

      <!-- Professional Details -->
      <div class="form-section">
        <h4>Professional Details</h4>
        <div class="row g-3">
          <div class="col-md-4">
            <label class="form-label">Total Experience (Years)</label>
            <input type="text" class="form-control" name="totalExperience"
              value="<%= formData?.totalExperience || '' %>">
          </div>
          <div class="col-md-4">
            <label class="form-label">Education Level</label>
            <input type="text" class="form-control" name="educationLevel" value="<%= formData?.educationLevel || '' %>">
          </div>
          <div class="col-md-4">
            <label class="form-label">Expected Salary</label>
            <input type="text" class="form-control" name="expectedSalary" value="<%= formData?.expectedSalary || '' %>">
          </div>
          <div class="col-12">
            <label class="form-label">Skills</label>
            <textarea class="form-control" name="skills" rows="3"><%= formData?.skills || '' %></textarea>
          </div>
          <div class="col-12">
            <label class="form-label">Additional Information</label>
            <textarea class="form-control" name="additionalInfo"
              rows="3"><%= formData?.additionalInfo || '' %></textarea>
          </div>
        </div>
      </div>

      <!-- Education Information -->
      <div class="form-section">
        <h4>Education Information</h4>
        <div id="education-container">
          <% if (formData?.education && formData.education.length> 0) { %>
            <% formData.education.forEach((edu, index)=> { %>
              <div class="education-entry mb-3 p-3 border rounded">
                <div class="row g-3">
                  <div class="col-md-6">
                    <label class="form-label">Institute*</label>
                    <input type="text" class="form-control" name="education[<%= index %>][institute]"
                      value="<%= edu.institute %>" required>
                  </div>
                  <div class="col-md-6">
                    <label class="form-label">Major</label>
                    <input type="text" class="form-control" name="education[<%= index %>][major]"
                      value="<%= edu.major %>">
                  </div>
                  <div class="col-md-3">
                    <label class="form-label">Start Month</label>
                    <select class="form-select" name="education[<%= index %>][startMonth]">
                      <option value="">Select Month</option>
                      <% months.forEach(month=> { %>
                        <option value="<%= month %>" <%=edu.startMonth===month ? 'selected' : '' %>><%= month %>
                        </option>
                        <% }) %>
                    </select>
                  </div>
                  <div class="col-md-3">
                    <label class="form-label">Start Year</label>
                    <select class="form-select" name="education[<%= index %>][startYear]">
                      <option value="">Select Year</option>
                      <% for(let year=currentYear; year>= 1970; year--) { %>
                        <option value="<%= year %>" <%=edu.startYear===year.toString() ? 'selected' : '' %>><%= year %>
                        </option>
                        <% } %>
                    </select>
                  </div>
                  <div class="col-md-3">
                    <label class="form-label">End Month</label>
                    <select class="form-select" name="education[<%= index %>][endMonth]">
                      <option value="">Select Month</option>
                      <% months.forEach(month=> { %>
                        <option value="<%= month %>" <%=edu.endMonth===month ? 'selected' : '' %>><%= month %>
                        </option>
                        <% }) %>
                    </select>
                  </div>
                  <div class="col-md-3">
                    <label class="form-label">End Year</label>
                    <select class="form-select" name="education[<%= index %>][endYear]">
                      <option value="">Select Year</option>
                      <% for(let year=currentYear; year>= 1970; year--) { %>
                        <option value="<%= year %>" <%=edu.endYear===year.toString() ? 'selected' : '' %>><%= year %>
                        </option>
                        <% } %>
                    </select>
                  </div>
                  <div class="col-12">
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="education[<%= index %>][currentlyStudying]"
                        id="currentlyStudying<%= index %>" <%=edu.currentlyStudying ? 'checked' : '' %>>
                      <label class="form-check-label" for="currentlyStudying<%= index %>">Currently Studying
                        Here</label>
                    </div>
                  </div>
                </div>
                <button type="button" class="btn btn-sm btn-danger mt-2 remove-education">Remove</button>
              </div>
              <% }) %>
                <% } else { %>
                  <div class="education-entry mb-3 p-3 border rounded">
                    <div class="row g-3">
                      <div class="col-md-6">
                        <label class="form-label">Institute*</label>
                        <input type="text" class="form-control" name="education[0][institute]" required>
                      </div>
                      <div class="col-md-6">
                        <label class="form-label">Major</label>
                        <input type="text" class="form-control" name="education[0][major]">
                      </div>
                      <div class="col-md-3">
                        <label class="form-label">Start Month</label>
                        <select class="form-select" name="education[0][startMonth]">
                          <option value="">Select Month</option>
                          <% months.forEach(month=> { %>
                            <option value="<%= month %>">
                              <%= month %>
                            </option>
                            <% }) %>
                        </select>
                      </div>
                      <div class="col-md-3">
                        <label class="form-label">Start Year</label>
                        <select class="form-select" name="education[0][startYear]">
                          <option value="">Select Year</option>
                          <% for(let year=currentYear; year>= 1970; year--) { %>
                            <option value="<%= year %>">
                              <%= year %>
                            </option>
                            <% } %>
                        </select>
                      </div>
                      <div class="col-md-3">
                        <label class="form-label">End Month</label>
                        <select class="form-select" name="education[0][endMonth]">
                          <option value="">Select Month</option>
                          <% months.forEach(month=> { %>
                            <option value="<%= month %>">
                              <%= month %>
                            </option>
                            <% }) %>
                        </select>
                      </div>
                      <div class="col-md-3">
                        <label class="form-label">End Year</label>
                        <select class="form-select" name="education[0][endYear]">
                          <option value="">Select Year</option>
                          <% for(let year=currentYear; year>= 1970; year--) { %>
                            <option value="<%= year %>">
                              <%= year %>
                            </option>
                            <% } %>
                        </select>
                      </div>
                      <div class="col-12">
                        <div class="form-check">
                          <input class="form-check-input" type="checkbox" name="education[0][currentlyStudying]"
                            id="currentlyStudying0">
                          <label class="form-check-label" for="currentlyStudying0">Currently Studying Here</label>
                        </div>
                      </div>
                    </div>
                    <button type="button" class="btn btn-sm btn-danger mt-2 remove-education">Remove</button>
                  </div>
                  <% } %>
        </div>
        <button type="button" id="add-education" class="btn btn-sm text-white" style="background-color: #343a40;">+ Add Education</button>
      </div>

      <!-- Work Experiences -->
      <div class="form-section">
        <h4>Work Experiences</h4>
        <div id="work-experience-container">
          <% if (formData?.workExperiences && formData.workExperiences.length> 0) { %>
            <% formData.workExperiences.forEach((exp, index)=> { %>
              <div class="work-experience-entry mb-3 p-3 border rounded">
                <div class="row g-3">
                  <div class="col-md-4">
                    <label class="form-label">Job Title*</label>
                    <input type="text" class="form-control" name="workExperiences[<%= index %>][jobTitle]"
                      value="<%= exp.jobTitle %>" required>
                  </div>
                  <div class="col-md-4">
                    <label class="form-label">Category*</label>
                    <input type="text" class="form-control" name="workExperiences[<%= index %>][category]"
                      value="<%= exp.category %>" required>
                  </div>
                  <div class="col-md-4">
                    <label class="form-label">Category Name</label>
                    <input type="text" class="form-control" name="workExperiences[<%= index %>][categoryName]"
                      value="<%= exp.categoryName %>">
                  </div>
                  <div class="col-md-3">
                    <label class="form-label">Start Month</label>
                    <select class="form-select" name="workExperiences[<%= index %>][startMonth]">
                      <option value="">Select Month</option>
                      <% months.forEach(month=> { %>
                        <option value="<%= month %>" <%=exp.startMonth===month ? 'selected' : '' %>><%= month %>
                        </option>
                        <% }) %>
                    </select>
                  </div>
                  <div class="col-md-3">
                    <label class="form-label">Start Year</label>
                    <select class="form-select" name="workExperiences[<%= index %>][startYear]">
                      <option value="">Select Year</option>
                      <% for(let year=currentYear; year>= 1970; year--) { %>
                        <option value="<%= year %>" <%=exp.startYear===year.toString() ? 'selected' : '' %>><%= year %>
                        </option>
                        <% } %>
                    </select>
                  </div>
                  <div class="col-md-3">
                    <label class="form-label">End Month</label>
                    <select class="form-select" name="workExperiences[<%= index %>][endMonth]">
                      <option value="">Select Month</option>
                      <% months.forEach(month=> { %>
                        <option value="<%= month %>" <%=exp.endMonth===month ? 'selected' : '' %>><%= month %>
                        </option>
                        <% }) %>
                    </select>
                  </div>
                  <div class="col-md-3">
                    <label class="form-label">End Year</label>
                    <select class="form-select" name="workExperiences[<%= index %>][endYear]">
                      <option value="">Select Year</option>
                      <% for(let year=currentYear; year>= 1970; year--) { %>
                        <option value="<%= year %>" <%=exp.endYear===year.toString() ? 'selected' : '' %>><%= year %>
                        </option>
                        <% } %>
                    </select>
                  </div>
                  <div class="col-12">
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox"
                        name="workExperiences[<%= index %>][currentlyWorking]" id="currentlyWorking<%= index %>"
                        <%=exp.currentlyWorking ? 'checked' : '' %>>
                      <label class="form-check-label" for="currentlyWorking<%= index %>">Currently Working Here</label>
                    </div>
                  </div>
                  <div class="col-12">
                    <label class="form-label">Description</label>
                    <textarea class="form-control" name="workExperiences[<%= index %>][description]"
                      rows="2"><%= exp.description %></textarea>
                  </div>
                </div>
                <button type="button" class="btn btn-sm btn-danger mt-2 remove-work-experience">Remove</button>
              </div>
              <% }) %>
                <% } else { %>
                  <div class="work-experience-entry mb-3 p-3 border rounded">
                    <div class="row g-3">
                      <div class="col-md-4">
                        <label class="form-label">Job Title*</label>
                        <input type="text" class="form-control" name="workExperiences[0][jobTitle]" required>
                      </div>
                      <div class="col-md-4">
                        <label class="form-label">Category*</label>
                        <input type="text" class="form-control" name="workExperiences[0][category]" required>
                      </div>
                      <div class="col-md-4">
                        <label class="form-label">Category Name</label>
                        <input type="text" class="form-control" name="workExperiences[0][categoryName]">
                      </div>
                      <div class="col-md-3">
                        <label class="form-label">Start Month</label>
                        <select class="form-select" name="workExperiences[0][startMonth]">
                          <option value="">Select Month</option>
                          <% months.forEach(month=> { %>
                            <option value="<%= month %>">
                              <%= month %>
                            </option>
                            <% }) %>
                        </select>
                      </div>
                      <div class="col-md-3">
                        <label class="form-label">Start Year</label>
                        <select class="form-select" name="workExperiences[0][startYear]">
                          <option value="">Select Year</option>
                          <% for(let year=currentYear; year>= 1970; year--) { %>
                            <option value="<%= year %>">
                              <%= year %>
                            </option>
                            <% } %>
                        </select>
                      </div>
                      <div class="col-md-3">
                        <label class="form-label">End Month</label>
                        <select class="form-select" name="workExperiences[0][endMonth]">
                          <option value="">Select Month</option>
                          <% months.forEach(month=> { %>
                            <option value="<%= month %>">
                              <%= month %>
                            </option>
                            <% }) %>
                        </select>
                      </div>
                      <div class="col-md-3">
                        <label class="form-label">End Year</label>
                        <select class="form-select" name="workExperiences[0][endYear]">
                          <option value="">Select Year</option>
                          <% for(let year=currentYear; year>= 1970; year--) { %>
                            <option value="<%= year %>">
                              <%= year %>
                            </option>
                            <% } %>
                        </select>
                      </div>
                      <div class="col-12">
                        <div class="form-check">
                          <input class="form-check-input" type="checkbox" name="workExperiences[0][currentlyWorking]"
                            id="currentlyWorking0">
                          <label class="form-check-label" for="currentlyWorking0">Currently Working Here</label>
                        </div>
                      </div>
                      <div class="col-12">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" name="workExperiences[0][description]" rows="2"></textarea>
                      </div>
                    </div>
                    <button type="button" class="btn btn-sm btn-danger mt-2 remove-work-experience">Remove</button>
                  </div>
                  <% } %>
        </div>
        <button type="button" id="add-work-experience" class="btn btn-sm text-white" style="background-color: #343a40;">+ Add Work Experience</button>
      </div>

      <!-- Summary -->
      <div class="form-section">
        <h4>Summary</h4>
        <div id="summary-container">
          <% if (formData?.summaryPoints && formData.summaryPoints.length> 0) { %>
            <% formData.summaryPoints.forEach((point, index)=> { %>
              <div class="input-group mb-2">
                <input type="text" class="form-control" name="summaryPoints[]" value="<%= point %>"
                  placeholder="Summary point">
                <button type="button" class="btn btn-danger remove-summary">×</button>
              </div>
              <% }) %>
                <% } else { %>
                  <div class="input-group mb-2">
                    <input type="text" class="form-control" name="summaryPoints[]" placeholder="Summary point">
                    <button type="button" class="btn btn-danger remove-summary">×</button>
                  </div>
                  <% } %>
        </div>
        <button type="button" id="add-summary" class="btn btn-sm text-white" style="background-color: #343a40;">+ Add Summary Point</button>
      </div>

      <!-- Social & Other Information -->
      <div class="form-section">
        <h4>Other Information</h4>
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label">Status</label>
            <select class="form-select" name="status">
              <option value="">--Select Status--</option>
              <% statuses.forEach(stat=> { %>
                <option value="<%= stat._id %>" <%=(formData?.status &&
                  formData.status.toString()===stat._id.toString()) ? 'selected' : '' %>>
                  <%= stat.name %>
                </option>
                <% }) %>
            </select>
          </div>
          <div class="col-md-6">
            <label class="form-label">Source</label>
            <select class="form-select" name="source">
              <option value="">--Select Source--</option>
              <% sources.forEach(src=> { %>
                <option value="<%= src._id %>" <%=(formData?.source && formData.source.toString()===src._id.toString())
                  ? 'selected' : '' %>>
                  <%= src.name %>
                </option>
                <% }) %>
            </select>
          </div>
          <div class="col-md-6">
            <label class="form-label">Source Contact</label>
            <select class="form-select" name="sourceContact" id="sourceContact">
              <option value="">--Select Contact--</option>
              <% contacts.forEach(contact=> { %>
                <option value="<%= contact._id %>" <%=(formData?.sourceContact &&
                  formData.sourceContact.toString()===contact._id.toString()) ? 'selected' : '' %>>
                  <%= contact.firstName %>
                    <%= contact.lastName %> (<%= contact.email %>)
                </option>
                <% }) %>
            </select>
          </div>
          <div class="col-md-6">
            <label class="form-label">Twitter</label>
            <input type="text" class="form-control" name="twitter" value="<%= formData?.twitter || '' %>">
          </div>
          <div class="col-md-6">
            <label class="form-label">Skype</label>
            <input type="text" class="form-control" name="skype" value="<%= formData?.skype || '' %>">
          </div>
        </div>
      </div>

      <!-- Attachment Information -->
      <div class="form-section">
        <h4>Attachment Information</h4>
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label">Profile Image</label>
            <input type="file" class="form-control" name="profileImage" accept="image/*">
          </div>
          <div class="col-md-6">
            <label class="form-label">Resume</label>
            <input type="file" class="form-control" name="resume" accept=".pdf,.doc,.docx">
          </div>
          <div class="col-md-6">
            <label class="form-label">Cover Letter</label>
            <input type="file" class="form-control" name="coverLetter" accept=".pdf,.doc,.docx">
          </div>
          <div class="col-md-6">
            <label class="form-label">Contract</label>
            <input type="file" class="form-control" name="contract" accept=".pdf,.doc,.docx">
          </div>
        </div>
      </div>

      <div class="text-end mt-4">
        <button type="submit" class="btn text-white px-4" style="background-color: #343a40;">Save Candidate</button>
      </div>
    </form>
  </div>

  <script>
    // Education
    document.getElementById('add-education').addEventListener('click', function () {
      const container = document.getElementById('education-container');
      const index = container.children.length;
      const template = `
      <div class="education-entry mb-3 p-3 border rounded">
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label">Institute*</label>
