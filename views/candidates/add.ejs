    // Fetch contact details when selected
    document.getElementById('sourceContact').addEventListener('change', async function () {
      const contactId = this.value;
      if (!contactId) return;

      try {
        const response = await fetch(`/contacts/api/${contactId}`);
        const contact = await response.json();

        // Populate billing address fields
        document.querySelector('input[name="billingStreet"]').value = contact.billingStreet || '';
        document.querySelector('input[name="billingCity"]').value = contact.billingCity || '';
        document.querySelector('input[name="billingState"]').value = contact.billingState || '';
        document.querySelector('input[name="billingCode"]').value = contact.billingCode || '';
        document.querySelector('input[name="billingCountry"]').value = contact.billingCountry || '';

        // Populate shipping address fields
        if (!contact.shippingSameAsBilling) {
          document.querySelector('input[name="shippingStreet"]').value = contact.shippingStreet || '';
          document.querySelector('input[name="shippingCity"]').value = contact.shippingCity || '';
          document.querySelector('input[name="shippingState"]').value = contact.shippingState || '';
          document.querySelector('input[name="shippingCode"]').value = contact.shippingCode || '';
          document.querySelector('input[name="shippingCountry"]').value = contact.shippingCountry || '';
        } else {
          document.querySelector('input[name="shippingStreet"]').value = contact.billingStreet || '';
          document.querySelector('input[name="shippingCity"]').value = contact.billingCity || '';
          document.querySelector('input[name="shippingState"]').value = contact.billingState || '';
          document.querySelector('input[name="shippingCode"]').value = contact.billingCode || '';
          document.querySelector('input[name="shippingCountry"]').value = contact.billingCountry || '';
        }
      } catch (error) {
        console.error('Error fetching contact details:', error);
      }
    });

    // Toggle shipping same as billing
    document.querySelector('input[name="shippingSameAsBilling"]').addEventListener('change', function () {
      const shippingFields = document.querySelectorAll('input[name^="shipping"]');
      shippingFields.forEach(field => {
        if (field.name !== 'shippingSameAsBilling') {
          field.disabled = this.checked;
          if (this.checked) {
            const billingFieldName = field.name.replace('shipping', 'billing');
            const billingField = document.querySelector(`input[name="${billingFieldName}"]`);
            field.value = billingField ? billingField.value : '';
          }
        }
      });
    });
  </script>

  
  <script>
  function toggleEducationFields() {
