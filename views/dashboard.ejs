<%- include('layout') %>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRM Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"> -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        :root {
            --primary-color: #4e73df;
            --success-color: #1cc88a;
            --info-color: #36b9cc;
            --warning-color: #f6c23e;
            --danger-color: #e74a3b;
            --secondary-color: #858796;
            --light-color: #f8f9fc;
            --dark-color: #5a5c69;
        }
         .quick-action-btn {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100px;
        padding: 10px;
        border: 2px solid transparent;
        border-radius: 10px;
        font-weight: 500;
        font-size: 14px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .quick-action-btn i {
        font-size: 22px;
        margin-bottom: 8px;
    }

    .quick-action-btn:hover {
        background-color: #f8f9fa;
        transform: translateY(-4px);
        border-color: #dee2e6;
    }

    .card {
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        border-radius: 10px;
    }

    .card-header {
        background-color: #f9f9f9;
        border-bottom: 1px solid #ddd;
        padding: 15px 20px;
    }

    .card-body .row > div {
        text-align: center;
    }
    

        body {
            background-color: #f8f9fc;
            font-family: 'Nunito', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        }

        .main-content {
            padding: 20px;
        }

        /* Stats Cards */
        .stats-card {
            background: white;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            height: 100%;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-left: 4px solid transparent;
        }

        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1.5rem 0 rgba(58, 59, 69, 0.2);
        }

        .stats-icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            margin-bottom: 15px;
        }

        .bg-primary { background-color: var(--primary-color); border-color: var(--primary-color); }
        .bg-success { background-color: var(--success-color); border-color: var(--success-color); }
        .bg-info { background-color: var(--info-color); border-color: var(--info-color); }
        .bg-warning { background-color: var(--warning-color); border-color: var(--warning-color); }
        .bg-danger { background-color: var(--danger-color); border-color: var(--danger-color); }
        .bg-secondary { background-color: var(--secondary-color); border-color: var(--secondary-color); }

        .stats-card h3 {
            font-weight: 700;
            margin-bottom: 5px;
        }

        .stats-card p {
            color: var(--secondary-color);
            margin-bottom: 5px;
            font-size: 0.9rem;
        }

        /* Cards */
        .card {
            border: none;
            border-radius: 8px;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
            margin-bottom: 20px;
        }

        .card-header {
            background-color: #f8f9fc;
            border-bottom: 1px solid #e3e6f0;
            padding: 1rem 1.25rem;
            border-radius: 8px 8px 0 0 !important;
        }

        .card-header h5 {
            font-weight: 600;
            color: var(--dark-color);
            margin-bottom: 0;
        }

        .card-header h5 i {
            margin-right: 8px;
        }

        /* Charts Container */
        .chart-container {
            position: relative;
            height: 400px;
            width: 100%;
        }

        .chart-small {
            height: 300px;
        }

        /* Tables */
        .table-responsive {
            border-radius: 8px;
            overflow: hidden;
        }

        .table {
            margin-bottom: 0;
        }

        .table th {
            background-color: #f8f9fc;
            color: var(--dark-color);
            font-weight: 600;
            border-top: none;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.02);
        }

        /* Quick Actions */
            .quick-action-btn {
            width: 120px;
            height: 120px;
            border-radius: 12px;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            background-color: #fff;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
            text-align: center;
            justify-content: center;
            }

            .quick-action-btn:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            text-decoration: none !important;
            }

            .quick-action-btn i {
            margin-bottom: 8px;
            }

            .quick-action-btn span {
            font-size: 0.9rem;
            font-weight: 500;
            text-align: center;
            }

            .quick-actions-wrapper {
            overflow-x: auto;
            padding-bottom: 10px;
            }
            .quick-actions-wrapper::-webkit-scrollbar {
            height: 6px;
            }
            .quick-actions-wrapper::-webkit-scrollbar-thumb {
            background-color: #ccc;
            border-radius: 10px;
            }


        /* Empty State */
        .empty-state {
            padding: 40px 0;
            text-align: center;
        }

        .empty-state i {
            font-size: 3rem;
            opacity: 0.3;
            margin-bottom: 15px;
        }

        .empty-state p {
            color: var(--secondary-color);
            margin-bottom: 20px;
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            .stats-card {
                margin-bottom: 15px;
            }
            
            .card-body {
                padding: 15px;
            }

            .chart-container {
                height: 300px;
            }
        }

        /* Badges */
        .badge {
            font-weight: 500;
            padding: 5px 8px;
            font-size: 0.75rem;
        }

        /* Time Range Selector */
        .time-range-selector .btn-group {
            flex-wrap: wrap;
        }

        .time-range-selector .btn {
            margin-bottom: 5px;
        }

        /* List Items */
        .list-item {
            padding: 15px 0;
            border-bottom: 1px solid #e3e6f0;
        }

        .list-item:last-child {
            border-bottom: none;
        }

        .list-item h6 {
            font-weight: 600;
            margin-bottom: 5px;
        }

        .list-item small {
            display: block;
            margin-bottom: 3px;
        }

        .list-item .text-muted {
            color: #b7b9cc !important;
        }
    </style>
</head>

<body>
    <div class="main-content">
        <!-- Time Range Selector -->
        <div class="card mb-4 time-range-selector">
            <div class="card-body py-2">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Dashboard Analytics</h5>
                    <div>
                        <div class="btn-group" role="group">
                            <a href="/?range=today" class="btn btn-sm <%= query.range === 'today' || !query.range ? 'btn-secondary' : 'btn-outline-secondary' %>">
                                Today
                            </a>
                            <a href="/?range=week" class="btn btn-sm <%= query.range === 'week' ? 'btn-secondary' : 'btn-outline-secondary' %>">
                                This Week
                            </a>
                            <a href="/?range=month" class="btn btn-sm <%= query.range === 'month' ? 'btn-secondary' : 'btn-outline-secondary' %>">
                                This Month
                            </a>
                            <a href="/?range=all" class="btn btn-sm <%= query.range === 'all' ? 'btn-secondary' : 'btn-outline-secondary' %>">
                                All Time
                            </a>
                        </div>
                        <div class="text-muted small mt-2 text-center">
                            <% if (query.range === 'today' || !query.range) { %>
                                Showing data for today, <%= moment().format('MMMM D, YYYY') %>
                            <% } else if (query.range === 'week') { %>
                                Showing data for this week, <%= moment().startOf('week').format('MMM D') %> - <%= moment().endOf('week').format('MMM D, YYYY') %>
                            <% } else if (query.range === 'month') { %>
                                Showing data for <%= moment().format('MMMM YYYY') %>
                            <% } else { %>
                                Showing all data
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Dashboard Stats -->
        <div class="row mb-4">
            <div class="col-lg-2 col-md-4 mb-3">
                <div class="stats-card">
                    <a href="/leads" style="text-decoration: none;color:black;">
                        <div class="d-flex flex-column align-items-center justify-content-center">
                        <div class="stats-icon bg-primary">
                            <i class="fas fa-user-plus"></i>
                        </div>
                        <div class="text-center">
                            <h3 class="mb-0"><%= stats.todayLeads %></h3>
                            <p class="text-muted mb-0">
                                <% if (query.range === 'today' || !query.range) { %>
                                    Today's Leads
                                <% } else if (query.range === 'week') { %>
                                    This Week's Leads
                                <% } else if (query.range === 'month') { %>
                                    This Month's Leads
                                <% } else { %>
                                    Total Leads
                                <% } %>
                            </p>
                        </div>
                    </div>
                    </a>
                </div>
            </div>

            <div class="col-lg-2 col-md-4 mb-3">
                <div class="stats-card">
                    <a href="/customers" style="text-decoration: none;color:black;">
                        <div class="d-flex flex-column align-items-center justify-content-center">
                        <div class="stats-icon bg-success">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="text-center">
                            <h3 class="mb-0"><%= stats.totalCustomers %></h3>
                            <p class="text-muted mb-0">
                                <% if (query.range === 'today' || !query.range) { %>
                                    Today's Customers
                                <% } else if (query.range === 'week') { %>
                                    This Week's Customers
                                <% } else if (query.range === 'month') { %>
                                    This Month's Customers
                                <% } else { %>
                                    Total Customers
                                <% } %>
                            </p>
                        </div>
                    </div>
                    </a>
                </div>
            </div>

            <div class="col-lg-2 col-md-4 mb-3">
                <div class="stats-card">
                    <a href="/sales" style="text-decoration: none;color: black;">
                        <div class="d-flex flex-column align-items-center justify-content-center">
                        <div class="stats-icon bg-warning">
                            <i class="fas fa-dollar-sign"></i>
                        </div>
                        <div class="text-center">
                            <h3 class="mb-0">₹<%= stats.todaySalesAmount.toLocaleString() %></h3>
                            <p class="text-muted mb-0">
                                <% if (query.range === 'today' || !query.range) { %>
                                    Today's Sales
                                <% } else if (query.range === 'week') { %>
                                    This Week's Sales
                                <% } else if (query.range === 'month') { %>
                                    This Month's Sales
                                <% } else { %>
                                    Total Sales
                                <% } %>
                            </p>
                        </div>
                    </div>
                    </a>
                </div>
            </div>

            <div class="col-lg-2 col-md-4 mb-3">
                <div class="stats-card">
                   <a href="/followup" style="text-decoration: none;color: black;">
                     <div class="d-flex flex-column align-items-center justify-content-center">
                        <div class="stats-icon bg-danger">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="text-center">
                            <h3 class="mb-0"><%= stats.todayFollowups %></h3>
                            <p class="text-muted mb-0">
                                <% if (query.range === 'today' || !query.range) { %>
                                    Today's Follow-ups
                                <% } else if (query.range === 'week') { %>
                                    This Week's Follow-ups
                                <% } else if (query.range === 'month') { %>
                                    This Month's Follow-ups
                                <% } else { %>
                                    Total Follow-ups
                                <% } %>
                            </p>
                        </div>
                    </div>
                   </a>
                </div>
            </div>

            <div class="col-lg-2 col-md-4 mb-3">
                <div class="stats-card">
                   <a href="/contact" style="text-decoration: none;color: black;">
                     <div class="d-flex flex-column align-items-center justify-content-center">
                        <div class="stats-icon bg-info">
                            <i class="fas fa-address-book"></i>
                        </div>
                        <div class="text-center">
                            <h3 class="mb-0"><%= stats.totalContacts %></h3>
                            <p class="text-muted mb-0">
                                <% if (query.range === 'today' || !query.range) { %>
                                    Today's Contacts
                                <% } else if (query.range === 'week') { %>
                                    This Week's Contacts
                                <% } else if (query.range === 'month') { %>
                                    This Month's Contacts
                                <% } else { %>
                                    Total Contacts
                                <% } %>
                            </p>
                        </div>
                    </div>
                   </a>
                </div>
            </div>

            <div class="col-lg-2 col-md-4 mb-3">
                <div class="stats-card">
                    <a href="/quotations" style="text-decoration: none;color: black;">
                        <div class="d-flex flex-column align-items-center justify-content-center">
                        <div class="stats-icon bg-secondary">
                            <i class="fas fa-file-invoice-dollar"></i>
                        </div>
                        <div class="text-center">
                            <h3 class="mb-0"><%= stats.pendingQuotations %></h3>
                            <p class="text-muted mb-0">
                                <% if (query.range === 'today' || !query.range) { %>
                                    Today's Draft Quotes
                                <% } else if (query.range === 'week') { %>
                                    This Week's Draft Quotes
                                <% } else if (query.range === 'month') { %>
                                    This Month's Draft Quotes
                                <% } else { %>
                                    Total Draft Quotes
                                <% } %>
                            </p>
                        </div>
                    </div>
                    </a>
                </div>
            </div>
        </div>

        <!-- Charts Section -->
        <div class="row mb-4">
            <!-- Sales Trend Chart -->
            <div class="col-lg-8 mb-4">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-line me-2" style="color: #343a40;"></i>
                            Sales & Lead Trends
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="salesTrendChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Lead Status Distribution -->
            <div class="col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-pie me-2" style="color: #343a40;"></i>
                            Lead Status Distribution
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-container chart-small">
                            <canvas id="leadStatusChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- More Charts -->
        <div class="row mb-4">
            <!-- Monthly Performance -->
            <div class="col-lg-6 mb-4">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-bar me-2" style="color: #343a40;"></i>
                            Monthly Performance Overview
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="monthlyPerformanceChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Follow-up Completion Rate -->
            <div class="col-lg-6 mb-4">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-area me-2" style="color: #343a40;"></i>
                            Follow-up Completion Trends
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="followupChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Follow-ups Section -->
            <div class="col-lg-6 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-phone me-2" style="color: #343a40;"></i>
                            <% if (query.range === 'today' || !query.range) { %>
                                Today's Follow-ups
                            <% } else if (query.range === 'week') { %>
                                This Week's Follow-ups
                            <% } else if (query.range === 'month') { %>
                                This Month's Follow-ups
                            <% } else { %>
                                All Follow-ups
                            <% } %>
                        </h5>
                        <a href="/followup" class="btn btn-sm btn-outline-secondary">View All</a>
                    </div>
                    <div class="card-body">
                        <% if (todaysFollowups.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Lead</th>
                                            <th>Phone</th>
                                            <th>Assigned To</th>
                                            <th>Time</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% todaysFollowups.forEach(followup => { %>
                                            <tr>
                                                <td>
                                                    <strong><%= followup.lead.name %></strong>
                                                </td>
                                                <td>
                                                    <a href="tel:<%= followup.lead.phone %>" class="text-decoration-none">
                                                        <i class="fas fa-phone me-1" style="color: #343a40;"></i>
                                                        <%= followup.lead.phone %>
                                                    </a>
                                                </td>
                                                <td>
                                                    <span class="badge bg-light text-dark"><%= followup.user.name %></span>
                                                </td>
                                                <td>
                                                    <small class="text-muted">
                                                        <%= moment(followup.nextFollowUpDate).format('MMM D, h:mm A') %>
                                                    </small>
                                                </td>
                                                <td>
                                                    <a href="/leads/<%= followup.lead._id %>" class="btn btn-sm btn-outline-secondary">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="empty-state">
                                <i class="fas fa-calendar-check" style="color: #343a40;"></i>
                                <p class="mt-3 text-muted">No follow-ups scheduled</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Recent Customers -->
            <div class="col-lg-6 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-users me-2" style="color: #343a40;"></i>
                            Recent Customers
                        </h5>
                        <a href="/leads" class="btn btn-sm text-white" style="background-color: #343a40;">
                            <i class="fas fa-plus"></i>
                        </a>
                    </div>
                    <div class="card-body">
                        <% if (recentCustomers.length > 0) { %>
                            <% recentCustomers.forEach(customer => { %>
                                <div class="list-item">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">
                                                <a href="/customers/<%= customer._id %>" class="text-decoration-none" style="color: #343a40;">
                                                    <%= customer.name %>
                                                </a>
                                            </h6>
                                            <small class="text-muted">
                                                <i class="fas fa-envelope me-1"></i>
                                                <%= customer.email %>
                                            </small>
                                            <small class="text-muted">
                                                <i class="fas fa-phone me-1"></i>
                                                <%= customer.phone %>
                                            </small>
                                            <small class="" style="color: #343a40;">
                                                <i class="fas fa-map-marker-alt me-1"></i>
                                                <%= customer.city %>, <%= customer.state %>
                                            </small>
                                        </div>
                                        <div class="text-end">
                                            <small class="d-block text-muted">
                                                <% if (query.range === 'today' || !query.range) { %>
                                                    <%= moment(customer.createdAt).fromNow() %>
                                                <% } else { %>
                                                    <%= moment(customer.createdAt).format('MMM D, h:mm A') %>
                                                <% } %>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="empty-state">
                                <i class="fas fa-users" style="color: #343a40;"></i>
                                <p class="mt-3 text-muted">No recent customers</p>
                                <a href="/leads" class="btn btn-success btn-sm text-white" style="background-color: #343a40;">Add Customer</a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Second Row -->
        <div class="row">
            <!-- Recent Leads -->
            <div class="col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-user-plus me-2" style="color: #343a40;"></i>
                            Recent Leads
                        </h5>
                        <a href="/leads/add" class="btn btn-sm text-white" style="background-color: #343a40;">
                            <i class="fas fa-plus"></i>
                        </a>
                    </div>
                    <div class="card-body">
                        <% if (recentLeads.length > 0) { %>
                            <% recentLeads.forEach(lead => { %>
                                <div class="list-item">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">
                                                <a href="/leads/<%= lead._id %>" class="text-decoration-none" style="color: #343a40;">
                                                    <%= lead.name %>
                                                </a>
                                            </h6>
                                            <small class="text-muted">
                                                <i class="fas fa-envelope me-1"></i>
                                                <%= lead.email %>
                                            </small>
                                            <small class="text-muted">
                                                <i class="fas fa-phone me-1"></i>
                                                <%= lead.phone %>
                                            </small>
                                            <% if (lead.interestedProduct) { %>
                                                <small class="" style="color: #343a40;">
                                                    <i class="fas fa-box me-1"></i>
                                                    <%= lead.interestedProduct.name %>
                                                </small>
                                            <% } %>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-<%= lead.status === 'new' ? 'primary' : 
                                                lead.status === 'interested' ? 'success' : 
                                                lead.status === 'contacted' ? 'info' : 'secondary' %>">
                                                <%= lead.getStatusDisplay() %>
                                            </span>
                                            <small class="d-block text-muted mt-1">
                                                <% if (query.range === 'today' || !query.range) { %>
                                                    <%= moment(lead.createdAt).fromNow() %>
                                                <% } else { %>
                                                    <%= moment(lead.createdAt).format('MMM D, h:mm A') %>
                                                <% } %>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="empty-state">
                                <i class="fas fa-user-plus" style="color: #343a40;"></i>
                                <p class="mt-3 text-muted">No recent leads</p>
                                <a href="/leads/add" class="btn text-white btn-sm" style="background-color: #343a40;">Add First Lead</a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Recent Contacts -->
            <div class="col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-address-book me-2" style="color: #343a40;"></i>
                            Recent Contacts
                        </h5>
                        <a href="/contact/add" class="btn btn-sm text-white" style="background-color: #343a40;">
                            <i class="fas fa-plus"></i>
                        </a>
                    </div>
                    <div class="card-body">
                        <% if (recentContacts.length > 0) { %>
                            <% recentContacts.forEach(contact => { %>
                                <div class="list-item">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">
                                                <a href="/contact/<%= contact._id %>" class="text-decoration-none" style="color:#343a40;">
                                                    <%= contact.firstName %>
                                                </a>
                                            </h6>
                                            <small class="text-muted">
                                                <i class="fas fa-envelope me-1"></i>
                                                <%= contact.email %>
                                            </small>
                                            <small class="text-muted">
                                                <i class="fas fa-phone me-1"></i>
                                                <%= contact.phoneNumber %>
                                            </small>
                                        </div>
                                        <div class="text-end">
                                            <small class="d-block text-muted">
                                                <% if (query.range === 'today' || !query.range) { %>
                                                    <%= moment(contact.createdAt).fromNow() %>
                                                <% } else { %>
                                                    <%= moment(contact.createdAt).format('MMM D, h:mm A') %>
                                                <% } %>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="empty-state">
                                <i class="fas fa-address-book" style="color: #343a40;"></i>
                                <p class="mt-3 text-muted">No contacts yet</p>
                                <a href="/contact/add" class="btn text-white btn-sm" style="background-color: #343a40;">Add Contact</a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Pending Quotations -->
            <div class="col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-file-invoice-dollar me-2" style="color: #343a40;"></i>
                            Pending Quotations
                        </h5>
                        <a href="/quotations/add" class="btn btn-sm text-white" style="background-color: #343a40;">
                            <i class="fas fa-plus"></i>
                        </a>
                    </div>
                    <div class="card-body">
                        <% if (pendingQuotations.length > 0) { %>
                            <% pendingQuotations.forEach(quotation => { %>
                                <div class="list-item">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">
                                                <a href="/quotations/<%= quotation._id %>" class="text-decoration-none" style="color: #343a40;">
                                                    Quote #<%= quotation.quotationNumber %>
                                                </a>
                                            </h6>
                                            <small class="text-muted">
                                                <i class="fas fa-user me-1"></i>
                                                <%= quotation.customer.name %>
                                            </small>
                                            <small class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>
                                                Valid until <%= moment(quotation.validUntil).format('MMM D, YYYY') %>
                                            </small>
                                            <small class="" style="color: #343a40;">
                                                <i class="fas fa-dollar-sign me-1"></i>
                                                ₹<%= quotation.totalAmount.toLocaleString() %>
                                            </small>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-warning">Pending</span>
                                            <small class="d-block text-muted mt-1">
                                                <% if (query.range === 'today' || !query.range) { %>
                                                    <%= moment(quotation.createdAt).fromNow() %>
                                                <% } else { %>
                                                    <%= moment(quotation.createdAt).format('MMM D, h:mm A') %>
                                                <% } %>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="empty-state">
                                <i class="fas fa-file-invoice-dollar" style="color: #343a40;"></i>
                                <p class="mt-3 text-muted">No pending quotations</p>
                                <a href="/quotations/add" class="btn btn-sm text-white" style="background-color: #343a40;">Create Quotation</a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">
          <i class="fas fa-bolt" style="color: #343a40;"></i> Quick Actions
        </h5>
      </div>
      <div class="card-body">
        <!-- Horizontal scroll on small screens -->
        <div class="d-flex flex-wrap gap-3 overflow-auto" style="margin-left: 15px;">
          <a href="/leads/add" class="quick-action-btn btn btn-outline-primary d-flex flex-column align-items-center text-decoration-none text-primary p-2">
            <i class="fas fa-user-plus fa-2x"></i>
            <span>Add Lead</span>
          </a>

          <a href="/followup" class="quick-action-btn btn btn-outline-success d-flex flex-column align-items-center text-decoration-none text-success p-2">
            <i class="fas fa-phone fa-2x"></i>
            <span>Follow-ups</span>
          </a>

          <a href="/contact/add" class="quick-action-btn btn btn-outline-info d-flex flex-column align-items-center text-decoration-none text-info p-2">
            <i class="fas fa-address-book fa-2x"></i>
            <span>Add Contact</span>
          </a>

          <a href="/quotations/add" class="quick-action-btn btn btn-outline-warning d-flex flex-column align-items-center text-decoration-none text-warning p-2">
            <i class="fas fa-file-invoice-dollar fa-2x"></i>
            <span>Create Quote</span>
          </a>

          <a href="/candidate/add" class="quick-action-btn btn btn-outline-danger d-flex flex-column align-items-center text-decoration-none text-danger p-2">
            <i class="fas fa-user-graduate fa-2x"></i>
            <span>Add Candidate</span>
          </a>

          <% if (user && (user.role === 'admin' || user.role === 'sales')) { %>
            <a href="/sales/add" class="quick-action-btn btn btn-outline-secondary d-flex flex-column align-items-center text-decoration-none text-secondary p-2">
              <i class="fas fa-dollar-sign fa-2x"></i>
              <span>Record Sale</span>
            </a>
          <% } %>

          <a href="/manager/add" class="quick-action-btn btn btn-outline-secondary d-flex flex-column align-items-center text-decoration-none text-secondary p-2">
            <i class="fas fa-user-tie fa-2x"></i>
            <span>Office</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script> -->

    <script>
        // Chart.js Configuration
        Chart.defaults.font.family = 'Nunito';
        Chart.defaults.font.size = 12;
        Chart.defaults.color = '#858796';

        // Parse chart data from server
        const chartData = <%-JSON.stringify(stats.chartData)%>;

        // Sales Trend Chart
        const salesTrendCtx = document.getElementById('salesTrendChart').getContext('2d');
        new Chart(salesTrendCtx, {
            type: 'line',
            data: {
                labels: chartData.salesTrend.labels,
                datasets: [{
                    label: 'Sales Amount (₹)',
                    data: chartData.salesTrend.salesData,
                    borderColor: '#4e73df',
                    backgroundColor: 'rgba(78, 115, 223, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.3,
                    yAxisID: 'y'
                }, {
                    label: 'Leads Count',
                    data: chartData.salesTrend.leadsData,
                    borderColor: '#1cc88a',
                    backgroundColor: 'rgba(28, 200, 138, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.3,
                    yAxisID: 'y1'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                },
                scales: {
                    y: {
                        type: 'linear',
                        display: true,
                        position: 'left',
                        title: {
                            display: true,
                            text: 'Sales Amount (₹)'
                        },
                        ticks: {
                            callback: function(value) {
                                return '₹' + value.toLocaleString();
                            }
                        }
                    },
                    y1: {
                        type: 'linear',
                        display: true,
                        position: 'right',
                        title: {
                            display: true,
                            text: 'Leads Count'
                        },
                        grid: {
                            drawOnChartArea: false,
                        },
                    }
                }
            }
        });

        // Lead Status Chart
        const leadStatusCtx = document.getElementById('leadStatusChart').getContext('2d');
        new Chart(leadStatusCtx, {
            type: 'doughnut',
            data: {
                labels: chartData.leadStatus.labels,
                datasets: [{
                    data: chartData.leadStatus.data,
                    backgroundColor: [
                        '#4e73df', // new
                        '#1cc88a', // interested  
                        '#36b9cc', // contacted
                        '#f6c23e', // qualified
                        '#e74a3b'  // closed
                    ],
                    borderWidth: 2,
                    borderColor: '#ffffff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // Monthly Performance Chart
        const monthlyPerformanceCtx = document.getElementById('monthlyPerformanceChart').getContext('2d');
        new Chart(monthlyPerformanceCtx, {
            type: 'bar',
            data: {
                labels: chartData.monthlyPerformance.labels,
                datasets: [{
                    label: 'Leads',
                    data: chartData.monthlyPerformance.leads,
                    backgroundColor: 'rgba(78, 115, 223, 0.8)',
                    borderColor: '#4e73df',
                    borderWidth: 1
                }, {
                    label: 'Customers',
                    data: chartData.monthlyPerformance.customers,
                    backgroundColor: 'rgba(28, 200, 138, 0.8)',
                    borderColor: '#1cc88a',
                    borderWidth: 1
                }, {
                    label: 'Sales',
                    data: chartData.monthlyPerformance.sales,
                    backgroundColor: 'rgba(246, 194, 62, 0.8)',
                    borderColor: '#f6c23e',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Count'
                        }
                    }
                }
            }
        });

        // Follow-up Chart
        const followupCtx = document.getElementById('followupChart').getContext('2d');
        new Chart(followupCtx, {
            type: 'line',
            data: {
                labels: chartData.followupTrend.labels,
                datasets: [{
                    label: 'Scheduled Follow-ups',
                    data: chartData.followupTrend.scheduled,
                    borderColor: '#e74a3b',
                    backgroundColor: 'rgba(231, 74, 59, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.3
                }, {
                    label: 'Completed Follow-ups',
                    data: chartData.followupTrend.completed,
                    borderColor: '#1cc88a',
                    backgroundColor: 'rgba(28, 200, 138, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Follow-ups Count'
                        }
                    }
                }
            }
        });
    
    </script>
</body>

