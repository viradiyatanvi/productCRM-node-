<%- include('../layout') %>
    <div class="main-content">
        <div class="container mt-4">
            <h3>Manager List</h3>
            <div class="table-responsive">
                <a href="manager/add">Add Manager</a>
                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Alternate Phone</th>
                            <th>Addresses</th>
                            <th>Company</th>
                            <th>Notes</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% managers.forEach((m, i)=> { %>
                            <tr>
                                <td>
                                    <%= i + 1 %>
                                </td>
                                <td>
                                    <%= m.fullName %>
                                </td>
                                <td>
                                    <%= m.email || 'N/A' %>
                                </td>
                                <td>
                                    <%= m.phone || 'N/A' %>
                                </td>
                                <td>
                                    <%= m.alternatePhone || 'N/A' %>
                                </td>

                                <td>
                                    <% if (Array.isArray(m.addresses) && m.addresses.length> 0) { %>
                                        <% m.addresses.forEach((a, index)=> { %>
                                            <div class="mb-1">
                                                <strong>
                                                    <%= index + 1 %>.
                                                </strong>
                                                <%= [a.address, a.city, a.state].filter(Boolean).join(', ') %>
                                                <% if (a.pincode) { %>- <%= a.pincode %><% } %>
                                            </div>
                                    <% }) %>
                                    <% } else { %>
                                        N/A
                                    <% } %>
                            </td>

                                <td>
                                    <%= m.company || ' N/A' %>
                                </td>
                                <td>
                                    <%= m.notes || 'N/A' %>
                                </td>
                                <td>
                                    <a href="/manager/edit/<%= m._id %>" class="btn btn-sm btn-warning">‚úèÔ∏è Edit</a>
                                    <form action="/manager/delete/<%= m._id %>" method="POST" style="display:inline;"
                                        onsubmit="return confirm('Are you sure you want to delete this manager?');">
                                        <button type="submit" class="btn btn-sm btn-danger">üóëÔ∏è Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>

                </table>
            </div>
        </div>
    </div>

    <style>
        .container {
            background-color: #ffffff;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 0 12px rgba(0, 0, 0, 0.05);
        }

        h3 {
            font-weight: 600;
            color: #343a40;
            margin-bottom: 20px;
        }

        .table {
            border-radius: 10px;
            overflow: hidden;
        }

        .table th,
        .table td {
            vertical-align: middle;
            font-size: 0.95rem;
        }

        .table thead th {
            background-color: #343a40 !important;
            color: #fff;
        }

        td div.mb-1 {
            font-size: 0.85rem;
            color: #495057;
        }

        .btn-warning,
        .btn-danger {
            border-radius: 5px;
            padding: 4px 10px;
            font-size: 0.85rem;
        }

        a.btn-warning {
            margin-right: 5px;
        }

        a[href="manager/add"] {
            display: inline-block;
            margin-bottom: 15px;
            font-weight: 500;
            text-decoration: none;
            color: #0d6efd;
            transition: 0.2s ease-in-out;
        }

        a[href="manager/add"]:hover {
            text-decoration: underline;
        }
    </style>