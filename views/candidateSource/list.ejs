<%- include('../layout') %>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>

    <body>
        <div class="main-content">
            <div class="container mt-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="mb-0">Candidate Source List</h2>
                    <a href="/candidate/source/add" class="btn text-white" style="background-color: #343a40;">
                        <i class="fas fa-plus me-1"></i> Add Candidate Source
                    </a>
                </div>

                <div class="table-responsive shadow-sm">
                    <table class="table table-bordered table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Updated At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% sources.forEach(s=> { %>
                                <tr>
                                    <td>
                                        <%= s.name %>
                                    </td>
                                    <td>
                                        <% if (s.status==='active' ) { %>
                                            <span class="badge bg-success">Active</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Inactive</span>
                                                <% } %>
                                    </td>
                                    <td>
                                        <%= new Date(s.updatedAt).toLocaleString() %>
                                    </td>
                                    <td>
                                        <a href="/candidate/source/edit/<%= s._id %>"
                                            class="btn btn-sm btn-warning me-2">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a href="/candidate/source/delete/<%= s._id %>" class="btn btn-sm btn-danger"
                                            onclick="return confirm('Are you sure you want to delete this source?')">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    </body>

    </html>