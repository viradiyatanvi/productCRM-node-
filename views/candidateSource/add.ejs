<%- include('../layout') %>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>

    <body>

       <div class="main-content">
         <div class="container mt-5">
            <div class="card shadow-sm border-0">
                <div class="card-header text-white" style="background-color: #495057;">
                    <h4 class="mb-0">Add Candidate Source</h4>
                </div>

                <div class="card-body">
                    <form action="/candidate/source/add" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Source Name</label>
                            <input type="text" class="form-control" id="name" name="name"
                                placeholder="Enter source name (e.g., LinkedIn)" required>
                        </div>

                        <button type="submit" class="btn text-white" style="background-color: #343a40;">
                            <i class="fas fa-save me-1"></i> Add Source
                        </button>
                        <a href="/candidate/source" class="btn btn-secondary ms-2">
                            <i class="fas fa-arrow-left me-1"></i> Back to List
                        </a>
                    </form>
                </div>
            </div>
        </div>
       </div>

        <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    </body>

    </html>